[Unit]
Description=Armadillo Authentication Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull molgenis/molgenis-auth:{{ version }}
ExecStart=/usr/bin/docker run --rm --name %n armadillo-auth

[Install]
WantedBy=multi-user.target